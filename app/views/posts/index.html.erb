<h1>Members Only</h1><br><br>

<% if user_signed_in? %>
<button><%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete } %></button><br><br>
<% else %>
<button><%= link_to "Sign In", new_user_session_path%></button>

<p>Dont have an account? <button><%= link_to "Sign Up",  new_user_registration_path%></button> and see the authors of our Posts</p><br><br>
<% end %>

<button><%= link_to 'Create new Post', controller: :posts, action: :new %></button><br><br>


<ul>
  <% @posts.each do |post| %>
    <li>
      <% if user_signed_in? %>
      <strong><%= post.user.username %></strong><br>
      <% else%>
      <strong>*****</strong><br>
      <% end %>
      <%= link_to post.body, post, method: :show %>
    </li><br>
  <% end %>
</ul>

